{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <header>
        <div class="header-container">
            <div class="discount text-center">OFFRE SPECIALE : -25% POUR TOUTE VIDANGE AVANT LE 31/12/2023</div>
            <h1 class="text-center header-text">Services et réparations automobile</h1>
            <h2 class="text-center header-text">Vente de voitures d'occasion</h2>
        </div>
        <img src="{{ asset('images/background/kenny-eliason-eqU1oK3oxvY-unsplash.jpg') }}" alt="car repair" class="header-img">
        </div>
    </header>
    <main>
    {# Section services #}
        {% include "home/_services.html.twig" %}
    {# Section Used Car #}
    <section class="mt-5">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-sm-8">
                    <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="card-img-top bg-carrou" src="{{ asset('images/background/obi-pixel8propix-JIcR3-O8ko8-unsplash.jpg') }}" alt="card-img">
                                    <div class="carousel-caption">
                                        Découvrez nos <span class="text-yellow">voitures d'occasion</span> 
                                    </div>
                            </div>
                            {% for annonce in annonces %}
                                <div class="carousel-item">
                                    <img class="card-img-top bg-carrou" src="{{ asset('uploads/ads/'~annonce.getTitle~'/'~annonce.imageRename2~'.jpg') }}" alt="card-img">
                                    <div class="carousel-caption">
                                        {{ annonce.title }}
                                        {{ annonce.price }} €
                                    </div>
                                </div>
                            {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="yellow-btn mt-3">
                        <a href="{{ path('app_ad')}}" class="text-decoration-none">Tout voir</a>
                    </button>
                </div>
                </div>
            </div>
        </div>
    </section>
    {# Section Reviews #}
    {% include "home/_reviews.html.twig" %}
</main>
{% endblock %}

