<section>
    <div class="d-flex justify-content-center flex-row">
    <div class="mt-5 col-xl-4 col-lg-6 col-md-8 col-sm-10 card review-bg">
        <div id="carouselExampleFade" class="carousel slide carousel-fade">
            <div class="carousel-inner">
                <div class="carousel-item active px-5">
                    <div class="card-body px-5">
                        {% if firstComment.rating == 1 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Pas du tout satisfait(e)</div>       
                        {% elseif firstComment.rating == 2 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Peu satisfait(e)</div>                       
                        {% elseif firstComment.rating == 3 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Moyennement satisfait(e)</div>      
                        {% elseif firstComment.rating == 4 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Très satisfait(e)</div>     
                        {% elseif firstComment.rating == 5 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <div class="fw-bold">Très satisfait(e)</div>      
                        {% endif %}
                        <p class="card-text mt-2 fst-italic">"{{firstComment.comment}}"</p>
                        <span class="card-title" style="font-size: 0.8rem">-{{firstComment.firstName}} {{firstComment.lastName[:1]}}.
                            <span class="text-muted mt-0">le {{firstComment.createdAt|date("d/m/Y", "Europe/Paris") }}</span>
                        </span>  
                    </div>
                </div>
                {% for commentaire in commentaires %}
                <div class="carousel-item px-5">
                    <div class="card-body px-5">
                        {% if commentaire.rating == 1 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Pas du tout satisfait(e)</div>   
                        {% elseif commentaire.rating == 2 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Peu satisfait(e)</div>   
                        {% elseif commentaire.rating == 3 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Moyennement satisfait(e)</div>   
                        {% elseif commentaire.rating == 4 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-regular fa-star"></i>
                            <div class="fw-bold">Satisfait(e)</div>  
                        {% elseif commentaire.rating == 5 %}
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <i class="fa-solid fa-star"></i>
                            <div class="fw-bold">Très satisfait(e)</div>  
                        {% endif %}
                        <p class="card-text mt-2 fst-italic">"{{commentaire.comment}}"</p>
                            <span class="card-title" style="font-size: 0.8rem">-{{commentaire.firstName}} {{commentaire.lastName[:1]}}.
                                <span class="text-muted">le {{commentaire.createdAt|date("d/m/Y", "Europe/Paris") }}</span>
                            </span> 
                        </div>
                    </div>
                {% endfor %}
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
        </div>
        <div class="d-flex justify-content-center">
        <a href="{{ path('app_review')}}" class="text-decoration-none text-center">Votre avis nous intéresse</a>
        <div>
    </div>
</section>