{% extends "base.html.twig" %}

{% block title %} Annonce {{ ad.title }} {% endblock %}

{% block body %}
    <button class="back-btn mt-5">    
        <a href="{{ path('app_ad') }}" class="text-decoration-none"> < Revenir aux annonces</a>
    </button>
    <main class="container">
        <section class="row">
            <h1 class="text-center"> Annonce {{ ad.title }} </h1> 
            <div class="col-6">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                        <img class="d-block w-100" src="{{ asset('uploads/ads/'~ad.getTitle~'/'~ad.imageRename1~'.jpg') }}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('uploads/ads/'~ad.getTitle~'/'~ad.imageRename2~'.jpg') }}" alt="First slide">
                        </div>
                        <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('uploads/ads/'~ad.getTitle~'/'~ad.imageRename3~'.jpg') }}" alt="First slide">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    </div>
                </div>

                <div class="col-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">{{ ad.title}}</h2>
                            <p class="cart-text">Marque : {{ad.brand}}</p>
                            <p class="cart-text">Prix : {{ad.price}} €</p>
                            <p class="cart-text">Kilométrage : {{ad.kilometers}}</p>
                    <p class="cart-text">Année de mise en cirulation : {{ad.registrationYear|date('Y')}}</p>
                </div>
            </div>
        </div>
        </section>
    </main>
{% endblock %}

