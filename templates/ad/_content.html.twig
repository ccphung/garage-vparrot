{% for annonce in annonces %}
    <div class="col-lg-4 col-md-6 col-xs-12 mt-3">
        <article class="card w-100">
            <img class="card-img-top" src="{{ asset('uploads/ads/'~annonce.getTitle~'/'~annonce.imageRename1~'.jpg') }}" alt="card-img">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="ad-title">{{ annonce.title|upper|replace({'-':' '})}}</h4>
                    </div>
                    <p class="cart-text ad-price m-0 fw-bold">Prix : {{annonce.price}} â‚¬</p>
                    <div class="mt-0">{{annonce.kilometers}} km - {{annonce.registrationYear|date('Y')}} - {{annonce.energy}} </div> 
                    </br>
                    <a href="{{ path('details', {"title": annonce.title})}}" class="btn btn-yellow">Voir l'annonce</a>
                </div>
        </article>
    </div>
{% endfor %}