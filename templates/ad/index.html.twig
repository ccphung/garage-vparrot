{% extends 'base.html.twig' %}

{% block title %} Voitures d'occasion {% endblock %}

{% block body %}
{# <main class="ad-container mx-5"> #}
    
    <div class="container border mt-3 p-2">
            <div class="d-flex flex-row">            
                <i class="fa-solid fa-filter"></i>
                <h4>Filtres</h4>
            </div>
            <form id="filters">
                <div class="row col-12">
                    <div class="col-12">
                        <p>Marques</p>
                            <ul class="list-unstyled class">
                            {% for brand in brands %}
                                <li>
                                <input type="checkbox" name="brand[]" id="{{ brand.id }}" value="{{ brand.id }}" checked> 
                                <label for="{{ brand.id }}"> {{brand.name}} </label>
                                </li>
                            {% endfor %} 
                            </ul>
                    </div>
                    <div class="col-12">
                        <p>Prix</p>
                        <input type="range" min="1" max="50000" value="50000" class="slider"  name="prices[]" id="myRange">
                        <p>Jusqu'Ã  <label for="prices[]" id="demo"></label> EUR</p>
                    </div>
            </form>
        </div>
    </div>
    <div class="container">
        <div id="content" class="row">
                {% include "ad/_content.html.twig" %}
            </div>
        </div>
    </div>
{# </main> #}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/filters.js') }}"></script>
{% endblock %}
