{% extends 'base.html.twig' %}

{% block title %} Voitures d'occasion {% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            {% for annonce in annonces %}
                <div class="col-xs-6 col-md-6 col-lg-5 mt-5">
                    <article class="card w-100">
                    <img class="card-img-top" src="{{ asset('uploads/ads/'~annonce.getTitle~'/'~annonce.imageRename1~'.jpg') }}" alt="card-img">
                        <div class="card-body">
                            <h2 class="card-title ad-title">{{ annonce.title }}</h2>
                            <p class="cart-text ad-price">Prix : {{annonce.price}} â‚¬</p>
                            <span class="ad-detail">{{annonce.kilometers}} km - {{annonce.registrationYear|date('Y')}}</span> 
                            </br>
                            <button class="ad-btn mt-2">
                                <a href="{{ path('details', {"title": annonce.title})}}" class="text-decoration-none">Voir l'annonce</a>
                            </button>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </section>
    </main>

{% endblock %}
